<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">
    <WebView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/webView" android:layout_weight="0.92"/>
    <Button
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_vk"
            android:id="@+id/singInVk" android:layout_gravity="center_horizontal" android:padding="10dp"
            android:layout_margin="10dp" android:onClick="OnClickBtnSignInVk"/>
</LinearLayout>