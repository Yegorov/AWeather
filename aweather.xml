<?xml version="1.0" encoding="UTF-8"?>
<project name="aweather" default="all">
  
  
  <property file="aweather.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="jdk.bin.android_api_19_platform" value="${jdk.home.android_api_19_platform}/../../../Program Files/Java/jdk1.8.0_05/bin"/>
  <path id="jdk.classpath.android_api_19_platform">
    <fileset dir="${jdk.home.android_api_19_platform}">
      <include name="platforms/android-19/android.jar"/>
      <include name="platforms/android-19/data/res"/>
      <include name="tools/support/annotations.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.appcompat-v7-19.1.0.classpath">
    <pathelement location="${basedir}/app/build/exploded-aar/com.android.support/appcompat-v7/19.1.0/res"/>
    <pathelement location="${basedir}/app/build/exploded-aar/com.android.support/appcompat-v7/19.1.0/classes.jar"/>
  </path>
  
  <path id="library.support-v4-19.1.0.classpath">
    <pathelement location="C:/Program Files (x86)/Android/android-sdk/extras/android/m2repository/com/android/support/support-v4/19.1.0/support-v4-19.1.0.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module app -->
  
  <dirname property="module.app.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.app" value="${jdk.home.android_api_19_platform}"/>
  <property name="module.jdk.bin.app" value="${jdk.bin.android_api_19_platform}"/>
  <property name="module.jdk.classpath.app" value="jdk.classpath.android_api_19_platform"/>
  
  <property name="compiler.args.app" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="app.output.dir" value="${module.app.basedir}/app/build/classes/debug"/>
  <property name="app.testoutput.dir" value="${module.app.basedir}/app/build/classes/debug"/>
  
  <path id="app.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="app.module.production.classpath">
    <path refid="${module.jdk.classpath.app}"/>
    <path refid="library.appcompat-v7-19.1.0.classpath"/>
    <path refid="library.support-v4-19.1.0.classpath"/>
  </path>
  
  <path id="app.runtime.production.module.classpath">
    <pathelement location="${app.output.dir}"/>
    <path refid="library.appcompat-v7-19.1.0.classpath"/>
    <path refid="library.support-v4-19.1.0.classpath"/>
  </path>
  
  <path id="app.module.classpath">
    <path refid="${module.jdk.classpath.app}"/>
    <pathelement location="${app.output.dir}"/>
    <path refid="library.appcompat-v7-19.1.0.classpath"/>
    <path refid="library.support-v4-19.1.0.classpath"/>
  </path>
  
  <path id="app.runtime.module.classpath">
    <pathelement location="${app.output.dir}"/>
    <path refid="library.appcompat-v7-19.1.0.classpath"/>
    <path refid="library.support-v4-19.1.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.app">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.app">
    <patternset refid="excluded.from.module.app"/>
  </patternset>
  
  <path id="app.module.sourcepath">
    <dirset dir="${module.app.basedir}/app">
      <include name="build/source/r/debug"/>
      <include name="build/source/aidl/debug"/>
      <include name="build/source/buildConfig/debug"/>
      <include name="build/source/rs/debug"/>
      <include name="src/main/res"/>
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.app" depends="compile.module.app.production,compile.module.app.tests" description="Compile module app"/>
  
  <target name="compile.module.app.production" depends="register.custom.compilers" description="Compile module app; production classes">
    <mkdir dir="${app.output.dir}"/>
    <javac2 destdir="${app.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.app}/javac">
      <compilerarg line="${compiler.args.app}"/>
      <bootclasspath refid="app.module.bootclasspath"/>
      <classpath refid="app.module.production.classpath"/>
      <src refid="app.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.app"/>
    </javac2>
    
    <copy todir="${app.output.dir}">
      <fileset dir="${module.app.basedir}/app/build/source/r/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.app.basedir}/app/build/source/aidl/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.app.basedir}/app/build/source/buildConfig/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.app.basedir}/app/build/source/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.app.basedir}/app/src/main/res">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.app.basedir}/app/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.app.tests" depends="register.custom.compilers,compile.module.app.production" description="compile module app; test classes" unless="skip.tests"/>
  
  <target name="clean.module.app" description="cleanup module">
    <delete dir="${app.output.dir}"/>
    <delete dir="${app.testoutput.dir}"/>
  </target>
  
  
  <!-- Module AWeather -->
  
  <dirname property="module.aweather.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.aweather" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.aweather" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.aweather" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.aweather" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="aweather.output.dir" value="${module.aweather.basedir}/../AWeather/build/classes/production/AWeather"/>
  <property name="aweather.testoutput.dir" value="${module.aweather.basedir}/../AWeather/build/classes/test/AWeather"/>
  
  <path id="aweather.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="aweather.module.production.classpath">
    <path refid="${module.jdk.classpath.aweather}"/>
  </path>
  
  <path id="aweather.runtime.production.module.classpath">
    <pathelement location="${aweather.output.dir}"/>
  </path>
  
  <path id="aweather.module.classpath">
    <path refid="${module.jdk.classpath.aweather}"/>
    <pathelement location="${aweather.output.dir}"/>
  </path>
  
  <path id="aweather.runtime.module.classpath">
    <pathelement location="${aweather.testoutput.dir}"/>
    <pathelement location="${aweather.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.aweather">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.aweather">
    <patternset refid="excluded.from.module.aweather"/>
  </patternset>
  
  
  <target name="compile.module.aweather" depends="compile.module.aweather.production,compile.module.aweather.tests" description="Compile module AWeather"/>
  
  <target name="compile.module.aweather.production" depends="register.custom.compilers" description="Compile module AWeather; production classes"/>
  
  <target name="compile.module.aweather.tests" depends="register.custom.compilers,compile.module.aweather.production" description="compile module AWeather; test classes" unless="skip.tests"/>
  
  <target name="clean.module.aweather" description="cleanup module">
    <delete dir="${aweather.output.dir}"/>
    <delete dir="${aweather.testoutput.dir}"/>
  </target>
  
  
  <!-- Module AWether -->
  
  <dirname property="module.awether.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.awether" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.awether" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.awether" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.awether" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="awether.output.dir" value="${module.awether.basedir}/../AWeather/build/classes/production/AWether"/>
  <property name="awether.testoutput.dir" value="${module.awether.basedir}/../AWeather/build/classes/test/AWether"/>
  
  <path id="awether.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="awether.module.production.classpath">
    <path refid="${module.jdk.classpath.awether}"/>
  </path>
  
  <path id="awether.runtime.production.module.classpath">
    <pathelement location="${awether.output.dir}"/>
  </path>
  
  <path id="awether.module.classpath">
    <path refid="${module.jdk.classpath.awether}"/>
    <pathelement location="${awether.output.dir}"/>
  </path>
  
  <path id="awether.runtime.module.classpath">
    <pathelement location="${awether.testoutput.dir}"/>
    <pathelement location="${awether.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.awether">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.awether">
    <patternset refid="excluded.from.module.awether"/>
  </patternset>
  
  
  <target name="compile.module.awether" depends="compile.module.awether.production,compile.module.awether.tests" description="Compile module AWether"/>
  
  <target name="compile.module.awether.production" depends="register.custom.compilers" description="Compile module AWether; production classes"/>
  
  <target name="compile.module.awether.tests" depends="register.custom.compilers,compile.module.awether.production" description="compile module AWether; test classes" unless="skip.tests"/>
  
  <target name="clean.module.awether" description="cleanup module">
    <delete dir="${awether.output.dir}"/>
    <delete dir="${awether.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.app, clean.module.aweather, clean.module.awether" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.app, compile.module.aweather, compile.module.awether" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>